section.wellcome
  .container.wellcome__container
    header.wellcome__header
      .wellcome__logo
        .logo ДЧ
      .wellcome__menu
        - var menu = ["Главная", "Обо мне", "Навыки", "Работы", "Отзывы", "Связаться"];
        nav.navigation
          ul.navigation__menu
            each item in menu
              li.navigation__item
                a.navigation__link #{item}
      .wellcome__links
        - var icons = ["insta", "vk", "github"];
        ul.socials
          each item in icons
            li.socials__item
              a.socials__link(href='#')
                +icon(item, 'socials__icon')
    .wellcome__content
      .wellcome__title
        | Личный сайт
        br
        | веб разработчика
      h1.wellcome__dev-name
        | Дмитрий
        br
        | Чижов
    .wellcome__scroll-btn
      a.scroll-btn Скролл
        +icon('scroll', 'scroll-icon')