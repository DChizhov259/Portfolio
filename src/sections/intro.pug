section.intro
  .container.intro__container
    header.intro__header
      .intro__logo
        .logo ДЧ
      .intro__menu
        - var menu = ["Главная", "Обо мне", "Навыки", "Работы", "Отзывы", "Связаться"];
        nav.navigation
          ul.navigation__menu
            each item in menu
              li.navigation__item
                a.navigation__link #{item}
      .intro__links
        - var icons = ["insta", "vk", "github"];
        ul.socials
          each item in icons
            li.socials__item
              a.socials__link(href='#')
                +icon(item, 'socials__icon')
    .intro__content
      .intro__title
        | Личный сайт
        br
        | веб разработчика
      h1.intro__dev-name
        | Дмитрий
        br
        | Чижов
    .intro__scroll-btn
      a.scroll-btn Скролл
        +icon('scroll', 'scroll-icon')