.slider {
  display: flex;
}

.slider__display {
  width: 975px;
  height: 550px;
  position: relative;
}

.slider__display-pic {
  width: inherit;
  height: inherit;
  position: relative;
  overflow: hidden;
}

.slider__display-mini {
  position: absolute;
  display: block;
  top: 390px;
  right: 0;
}

.slider-mini__item {
  width: 180px;
  height: 100px;

  &--active,
  &:hover {
    .slider-mini__link {
      outline-color: $orange-color;
      outline-style: solid;
      outline-width: 3px;
      margin-right: 3px;
      transition: 0.3s;
      z-index: 1;
    }
  }
}

.slider-mini {
  display: flex;
}

.slider-mini__link {
  position: relative;
  width: inherit;
  height: inherit;
  overflow: hidden;
}

.slider-image {
  width: 100%;
  position: absolute;
}

.slider__buttons {
  position: absolute;
  display: flex;
  flex-direction: column;
  top: 390px;
  right: -50px;
}

.direction-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50px;
  height: 50px;
  background-color: $dark_blue-color;

  &--prev {
    .slider-arrow {
      transform: rotate(180deg);
    }
  }

  .slider-arrow {
    width: 10px;
    height: 10px;
    fill: #727883;
  }

  &:hover {
    .slider-arrow {
      fill: #ffffff;
    }
  }
}

.slider__number {
  display: flex;
  align-items: flex-end;
  margin-bottom: 255px;
  margin-left: -50px;
  margin-right: -11px;
  width: 375px;
  font-family: "open-sans-exbo";
  font-size: 320px;
  line-height: 0;
  opacity: 0.3;
  z-index: -1;
}

.slider__info {
  display: flex;
  flex-direction: column;
}

.slider__info__tags {
  display: flex;
  list-style: none;
  margin-bottom: 35px;
}

.tags__item {
  font-family: "open-sans-sebo";
  font-size: 12px;
  margin-right: 7px;
  padding: 10px 15px;
  border-radius: 35px;
  background-color: #f3f5f9;
}

.slider__info__desc-title {
  font-family: "open-sans-bo";
  font-size: 24px;
  line-height: 35.4px;
  color: #333c49;
  margin-bottom: 28px;
}

.slider__info__desc-text {
  font-family: "open-sans-sebo";
  font-size: 12.8px;
  line-height: 24px;
  color: #333c49;
  margin-bottom: 35px;
}

.slider__info-btns {
  color: #586fd3;
}

.link-icon {
  fill: #586fd3;
  width: 13px;
  height: 13px;
  margin-right: 12px;
}

.slider__info-link {
  font-family: "open-sans-bo";
  font-size: 14.4px;
}
