.user {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.user__avatar {
  margin-bottom: 70px;
}

.user__data-table {
  font-family: "open-sans-sebo";
  font-size: 16px;
}

.user__data-cell {
  padding: 10px 0 5px 0;

  &:first-child {
    opacity: 0.15;
  }

  &:last-child {
    padding-left: 60px;
    font-family: "open-sans-sebo";

    @include tablets {
      padding-left: 40px;
    }
  }
}
