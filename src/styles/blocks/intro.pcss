.intro {
  height: 100vh;
  min-height: 240px;
}

.intro__container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.intro__header {
  display: flex;
  justify-content: space-between;
}

.intro__menu {
  margin: 0 90px;
}

.intro__content {
  display: flex;
  justify-content: center;
}

.intro__scroll-btn {
  display: flex;
  justify-content: center;
}
