mixin icon(name, className)
  - var icon = require(`images/icons/${name}.svg`);
  svg(class=className viewBox=icon.viewBox preserveAspectRatio="none")
    use(xlink:href=icon.url)

mixin image(path, altName, className)
  img(src=require(`images/${path}`) class=className alt=altName)

mixin comment(comment)
  .comment
    article.comment__text=comment.text
    .comment__author
      .comment__author-avatar
        .avatar
          +image(comment.ava, 'user-pic', 'avatar-image')
      .comment__author-name=comment.author
      .comment__author-pos=comment.position